<link rel="stylesheet" href="/css/auth/register.css">

<body><br>
    <img src="/img/logo.png" class="centered-image"><br>
    <div class="container">
        <h1>Regístrate</h1>
        <p>
            ¿Ya tienes una cuenta? <a href="/login">Inicia sesión</a>
        </p>
        <form action="/registro" method="POST" id="form">
            {{#each list}}
            <input type="hidden" name="numero" id="numero" value="{{maximo}}">
            {{/each}}
            <div class="form-group">
                <div class="input-group">
                    <label>Nombres:</label>
                    <input type="text" name="nombres_usuario" placeholder="Ingresa tus nombres completos" required />
                </div>
                <div class="input-group">
                    <label>Apellidos:</label>
                    <input type="text" name="apellidos_usuario" placeholder="Ingresa tus apellidos completos"
                        required />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <label>Cédula:</label>
                    <input type="text" name="cedula_usuario" placeholder="Ingrese una cedula" required />
                </div>
                <div class="input-group">
                    <label>Celular:</label>
                    <input type="text" name="celular_usuario" placeholder="Ingresa tus apellidos completos" required />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <label>Correo Electrónico:</label>
                    <input type="email" name="correo_electronico_usuario" placeholder="ejemplo@gmail.com" required />
                </div>
                <div class="input-group">
                    <label>Contraseña:</label>
                    <input type="password" name="password_usuario" placeholder="contraseña" required />
                </div>
            </div>
            <button type="submit">Guardar</button>
        </form>
    </div>
</body>

<script src="/js/usuario.js"></script>